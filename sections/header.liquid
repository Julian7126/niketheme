<nav>
  {% render 'header' %}
</nav>

<style>
  .header-nav {
    display: flex;
    justify-content: space-between;
    margin: 0;
    padding: 1px;
    background-color: white;
    padding: 0 30px 0 30px;
  }

  .middle-nav-links {
    display: flex;
    font-size: 17px;
    font-weight: bold;
    font-family: 'Helvetica Neue', Arial, sans-serif;
  }

  .middle-nav-links li {
    list-style-type: none;
    padding: 10px;
  }

  .middle-nav-links li:hover {
    background-color: #f0f0f0;
    transition: background-color 0.3s ease;
    cursor: pointer;
  }

  .middle-nav-links a {
    text-decoration: none;
    color: inherit;
  }

  .right-nav-items {
    display: flex;
    align-items: center;
  }

  .search {
    padding: 10px;

    border-radius: 100px;
    border: none;
    background-color: #f0f0f0;
  }
</style>

