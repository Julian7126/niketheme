{% if section.settings.show_announcement %}
  <section>
    <div class="announcement-bar">
      <div class="announcement-bar-left-section">
        {% if section.settings.image != blank %}
          <img
            src="{{ section.settings.image | image_url}}"
            width="50"
            height="50"
            loading="lazy"
            alt="Announcement Bar Image"
          >
        {% else %}
          <img src="{{ 'a.png' | asset_url }}" width="50" height="50" loading="lazy" alt="Announcement Bar Image">
        {% endif %}

        {% if section.settings.image2 != blank %}
          <img
            src="{{ section.settings.image2 | image_url }}"
            width="50"
            height="50"
            loading="lazy"
            alt="Announcement Bar Image"
          >
        {% else %}
          <img src="{{ 'b.png' | asset_url }}" width="50" height="50" loading="lazy" alt="Announcement Bar Image">
        {% endif %}
      </div>
      <div class="announcement-bar-right-section">
        <ul class="announcement-bar-inner-list">
          {% if section.blocks.size == 0 %}
            <li>
              <a href="#"> Help </a>
            </li>
            {% if shop.customer_accounts_enabled %}
              {% if customer %}
                <li>
                  <a href="/account"> Account </a>
                </li>
              {% else %}
                <li>
                  <a href="/account/login"> Login </a>
                </li>
              {% endif %}
            {% endif %}
          {% else %}
            {% for block in section.blocks %}
              <li>
                <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
              </li>
            {% endfor %}
          {% endif %}
        </ul>
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show Announcement Bar",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Pick Image",
      "info": "true"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Pick Image",
      "info": "true"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Free shipping on all orders over $50"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#F4F4F4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "name": "Links",
      "type": "links",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link "
        }
      ]
    }
  ],
  "presets": []
}
{% endschema %}
